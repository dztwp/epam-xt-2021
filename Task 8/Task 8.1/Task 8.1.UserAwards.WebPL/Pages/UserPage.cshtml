@using Task_8._1.UserAwards.Dependencies;
@using Task_8._1.UserAwards.Common.Entities;
@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";
    var _userBLL = DependencyResolver.Instance.userBLL;
    var user = _userBLL.GetUserById(Guid.Parse(Request.QueryString["Id"]));
    PageData["Title"] = "UserPage";
}
<div class="col-sm-5">
    <div class="col-sm-12">
        <div class="col-sm-8">
            <span>Имя:</span>
            <span>@user.Name</span>
        </div>
        <div class="col-sm-8">
            <span>Возраст:</span>
            <span>@user.Age</span>
        </div>
        <div class="col-sm-8">
            <span>Date of Birth:</span>
            <span>@user.DateOfBirth.Date</span>
        </div>
    </div>
    <div class="col-sm12">
        <form method="post">

            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                <button onclick="window.location.href ='/Pages/AddAwardToUserPage?UserId=@user.Id';" type="button" class="btn btn-secondary">Добавить награды пользователю</button>
            </div>
            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                <button onclick="window.location.href ='/Pages/DeleteUser?Id=@user.Id';" type="button" class="btn btn-secondary">Удалить пользователя</button>
            </div>
            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                <button onclick="window.location.href ='/Pages/UpdateUser?Id=@user.Id';" type="button" class="btn btn-secondary">Обновить пользователя</button>
            </div>
        </form>
    </div>
</div>
<div class="col-sm-6">
    @RenderPage("~/Pages/Partial/ListOfUserAwards.cshtml")
</div>


